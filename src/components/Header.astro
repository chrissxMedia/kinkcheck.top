---
import HeaderLogo from "./HeaderLogo.astro";

export interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<header class="column">
    <div class="row">
        <HeaderLogo>{title}</HeaderLogo>
        <slot />
    </div>
</header>

<style>
    .row {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        column-gap: 1em;
    }

    .column {
        display: flex;
        flex-direction: column;
    }
</style>
