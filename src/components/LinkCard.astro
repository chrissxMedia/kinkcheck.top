---
// this component belongs in cmdesigns, and will be put there once it's done

export interface Props {
    href: string;
    background?: string;
    smol?: boolean;
}

const { background = "rgb(var(--cmblack))", smol = false } = Astro.props;
---

<li>
    <a {...Astro.props}>
        <div>
            <slot />
        </div>
    </a>
</li>

<style
    define:vars={{
        "outer-padding": smol ? "0.2rem" : "0.25rem",
        "outer-border": smol ? "0.64rem" : "0.8rem",
        "inner-padding": smol ? "0.5rem 0.65rem" : "1rem 1.3rem",
        "inner-border": smol ? "0.4rem" : "0.5rem",
        background,
    }}
>
    li {
        list-style: none;
        display: flex;
        padding: var(--outer-padding);
        background-color: var(--background);
        color: white;
        background-image: none;
        background-size: 400%;
        border-radius: var(--outer-border);
        background-position: 100%;
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow:
            0 4px 6px -1px rgba(0, 0, 0, 0.1),
            0 2px 4px -2px rgba(0, 0, 0, 0.1);
    }
    a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: var(--inner-padding);
        border-radius: var(--inner-border);
        color: white;
        background-color: var(--background);
        opacity: 0.8;
        display: flex;
    }
    div {
        margin: auto 0;
        width: 100%;
    }
    li:is(:hover, :focus-within) {
        background-position: 0;
        background-image: linear-gradient(
            45deg,
            rgb(var(--cmpurple)),
            rgb(var(--cmred)) 30%,
            white 60%
        );
    }
</style>
