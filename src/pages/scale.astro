---
import Layout from "../layouts/Layout.astro";
import HeaderLogo from "../components/HeaderLogo.astro";
---

<Layout title="Top Scale">
    <header><HeaderLogo>Top Scale</HeaderLogo></header>
    <main>
        <input type="range" min="0" max="1" step="0.000001" />
        <div class="ccs">
            <div style="--x: 2; --y: 2;" class="ccp"></div>
        </div>
    </main>
</Layout>

<style>
    :global(div#content) {
        width: max-content;
    }
    main {
        width: 500px;
    }
    div.ccs {
        position: relative;
        width: 100%;
        height: 0;
        padding-top: 100%;
        box-sizing: border-box;
        aspect-ratio: 1/1;
        background-image: linear-gradient(
                #0000 calc(50% - 1px),
                #fff8 0 calc(50% + 1px),
                transparent 0
            ),
            linear-gradient(
                to right,
                #0000 calc(50% - 1px),
                #fff8 0 calc(50% + 1px),
                transparent 0
            );
    }
    div.ccp {
        width: 5%;
        height: 5%;
        background-color: rgb(var(--cmpurple));
        border-radius: 50%;
        position: absolute;
        transform: translate(-50%, -50%);
        left: calc(50% + var(--x) * 10%);
        top: calc(50% - var(--y) * 10%);
    }
</style>
