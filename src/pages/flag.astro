---
import FlagGenerator from "../components/FlagGenerator";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Flag Generator" screenshotOptions={{ windowWidth: 600 }}>
    <FlagGenerator client:load />
</Layout>

<style>
    :global(div#content) {
        width: max-content;
        max-width: 100%;
        font-size: 20px;
    }
    @media screen and (width <= 667px) {
        :global(div#content) {
            font-size: 3vw;
        }
    }
</style>
